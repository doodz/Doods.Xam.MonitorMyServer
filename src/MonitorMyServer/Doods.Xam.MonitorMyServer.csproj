    <PackageReference Include="Zeroconf" Version="3.0.30" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="..\..\..\Doods.Frameworks.Std\Doods.Framework.Mobile.Std\Resources\MyResourceDictionary.xaml" Link="Resx\MyResourceDictionary.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
    <EmbeddedResource Include="Resx\ThirdPartyLicenseOverview_doods.txt" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="..\..\Doods.Framework.Mobile.Ssh.Std\Resources\MobileSshResourceDictionary.xaml" Link="Resx\MobileSshResourceDictionary.xaml">

    </EmbeddedResource>
    <EmbeddedResource Update="Views\SystemView.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="Templates\ZeroconfHostTemplate.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
  </ItemGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="powershell.exe -ExecutionPolicy Bypass -File $(ProjectDir)\Resx\Tools\PreBuildScript.ps1  $(ProjectDir) $(SolutionDir) $(TargetDir) $(SolutionPath)" />
  </Target>
</Project>
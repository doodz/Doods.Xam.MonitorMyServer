                          Icon="cat.png">
                <views:CatsPage />
            </ShellContent>
            <ShellContent Title="Dogs"
                          Icon="dog.png">
                <views:DogsPage />
            </ShellContent>
        </Tab>-->
        <ShellSection>
            <ShellContent Title="Settings"
                          Icon="elephant.png"
                          ContentTemplate="{DataTemplate settings:SettingsPage}"/>
            <ShellContent Title="About"
                          Icon="bear.png"
                          ContentTemplate="{DataTemplate about:AboutPage}"/>
          
        </ShellSection>
       
    </FlyoutItem>
   
</Shell>
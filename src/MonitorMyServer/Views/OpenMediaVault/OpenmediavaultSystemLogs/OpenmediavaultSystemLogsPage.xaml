                    <TapGestureRecognizer
                        Command="{Binding BindingContext.DeleteItemCommand,Mode=OneWay, Source={x:Reference Page}}"
                        CommandParameter="{Binding .}" />
                </controls:DoodsSvgImage.GestureRecognizers>
            </controls:DoodsSvgImage>
            <controls:DoodsSvgImage
                IsVisible="False"
